---
import { getCollection } from 'astro:content';
import JobCard from './JobCard';

const jobs = await getCollection('career');
---

<div class="mx-auto">
    <h2 class="font-bold text-3xl py-2">Career</h2>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        {jobs.map(job => (
            <JobCard job={job} />
        ))}
    </div>
</div>
